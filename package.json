{
  "name": "tourist-platform",
  "version": "1.0.0",
  "description": "AI-powered platform for inbound tourism in Japan",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "docker-compose up --build",
    "dev:api": "cd apps/api && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:web": "cd apps/web && npm run dev",
    "build": "docker-compose build",
    "start": "docker-compose up",
    "stop": "docker-compose down",
    "clean": "docker-compose down -v --rmi all",
    "logs": "docker-compose logs -f"
  },
  "keywords": [
    "tourism",
    "ai",
    "japan",
    "fastapi",
    "nextjs",
    "postgresql",
    "docker"
  ],
  "author": "",
  "license": "MIT"
}