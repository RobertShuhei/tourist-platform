{
  "name": "tourist-platform",
  "version": "1.0.0",
  "description": "AI-powered platform for inbound tourism in Japan",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "docker compose -f infra/docker/docker-compose.dev.yml up --build",
    "dev:up": "docker compose -f infra/docker/docker-compose.dev.yml up -d",
    "dev:down": "docker compose -f infra/docker/docker-compose.dev.yml down --remove-orphans",
    "dev:logs": "docker compose -f infra/docker/docker-compose.dev.yml logs -f"
  },
  "keywords": [
    "tourism",
    "ai",
    "japan",
    "fastapi",
    "nextjs",
    "postgresql",
    "docker"
  ],
  "author": "",
  "license": "MIT"
}